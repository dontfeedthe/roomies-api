{
  "name": "roomies-api",
  "version": "0.0.1",
  "description": "Roomies API",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dontfeedthe/roomies-api.git"
  },
  "keywords": [
    "roomies",
    "api",
    "rest",
    "resftul",
    "hateoas",
    "express"
  ],
  "author": "Simon RENOULT <simon.renoult@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dontfeedthe/roomies-api/issues"
  },
  "homepage": "https://github.com/dontfeedthe/roomies-api#readme",
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "private": true,
  "engines": {
    "node": "4.2.1"
  },
  "scripts": {
    "start": "node ./src/bin/www",
    "start:dev": "nodemon ./src/bin/www",
    "lint": "node_modules/standard/bin/cmd.js && echo Code looks good!",
    "test": "npm run lint && npm run test:all",
    "test:unit": "export NODE_ENV=test && mocha --recursive test/unit",
    "test:integration": "export NODE_ENV=test && mocha --recursive test/integration",
    "test:all": "export NODE_ENV=test && mocha --recursive -R dot",
    "test:watch": "export NODE_ENV=test && npm run lint && mocha --recursive --watch -R dot"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "is": "^3.1.0",
    "morgan": "~1.6.1",
    "mysql": "^2.9.0",
    "pg": "^4.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.11.0",
    "sqlite3": "^3.1.0",
    "validator-js": "^0.2.1"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "mocha": "^2.3.3",
    "node-mocks-http": "^1.4.4",
    "sinon": "^1.17.2",
    "sinon-as-promised": "^4.0.0",
    "standard": "^5.3.1",
    "supertest": "^1.1.0",
    "supertest-as-promised": "^2.0.2"
  }
}
